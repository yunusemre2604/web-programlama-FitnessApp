@model FitnessApp.Models.Trainer
@{
    ViewData["Title"] = "Yeni Eğitmen Ekle";
}

<style>
    /* --- KARANLIK MOD & CAM EFEKTİ --- */
    html, body {
        height: 100%;
        background-color: #1a1a1d !important;
        color: #e0e0e0;
        font-family: 'Poppins', sans-serif;
    }

    .form-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 0;
    }

    .form-card {
        background: #25252b;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 40px;
        width: 100%;
        max-width: 600px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.5);
        position: relative;
    }

    /* SARI DETAYLAR (Eğitmenler İçin) */
    .form-title {
        font-weight: 800;
        font-size: 2rem;
        text-align: center;
        margin-bottom: 30px;
        color: #fff;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-bottom: 2px solid #ffc107; /* Sarı Çizgi */
        padding-bottom: 15px;
        display: inline-block;
    }

    .header-wrapper {
        text-align: center;
    }

    label {
        color: #bbb;
        font-weight: 600;
        margin-bottom: 8px;
        font-size: 0.9rem;
    }

    .form-control {
        background-color: rgba(0, 0, 0, 0.3);
        border: 1px solid #444;
        color: #fff;
        border-radius: 10px;
        padding: 12px 15px;
    }

        .form-control:focus {
            background-color: rgba(0, 0, 0, 0.5);
            border-color: #ffc107;
            box-shadow: 0 0 10px rgba(255, 193, 7, 0.3);
            color: #fff;
        }

    /* YUVARLAK RESİM ÖNİZLEME (Eğitmen olduğu için) */
    .img-preview-wrapper {
        width: 150px;
        height: 150px;
        border: 2px dashed #444;
        border-radius: 50%; /* Yuvarlak */
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px; /* Ortala */
        overflow: hidden;
        background-color: rgba(0,0,0,0.2);
        position: relative;
        cursor: pointer;
        transition: 0.3s;
    }

        .img-preview-wrapper:hover {
            border-color: #ffc107;
        }

        .img-preview-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: none;
        }

    .placeholder-text {
        color: #666;
        font-size: 0.8rem;
        text-align: center;
        pointer-events: none;
    }

    /* BUTONLAR */
    .btn-save {
        background: linear-gradient(45deg, #ffc107, #ff8c00);
        border: none;
        color: #000; /* Sarı üzerinde siyah yazı */
        padding: 12px;
        border-radius: 30px;
        font-weight: 700;
        font-size: 1rem;
        width: 100%;
        transition: 0.3s;
        margin-top: 20px;
        box-shadow: 0 5px 15px rgba(255, 193, 7, 0.3);
    }

        .btn-save:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(255, 193, 7, 0.5);
        }

    .btn-cancel {
        display: block;
        text-align: center;
        color: #888;
        margin-top: 15px;
        text-decoration: none;
        font-size: 0.9rem;
        transition: 0.3s;
    }

        .btn-cancel:hover {
            color: #fff;
        }

</style>

<div class="form-container">
    <div class="form-card">

        <div class="header-wrapper">
            <h2 class="form-title">Yeni Eğitmen</h2>
        </div>

        <form asp-action="CreateTrainer" method="post" enctype="multipart/form-data">

            <div class="mb-4 text-center">
                <div class="img-preview-wrapper" onclick="document.getElementById('fileInput').click();">
                    <img id="imgPreview" src="#" />
                    <div class="placeholder-text" id="placeholderText">
                        <i class="fa fa-camera fa-2x mb-1"></i><br>Fotoğraf Seç
                    </div>
                </div>
                <input type="file" name="file" id="fileInput" accept="image/*" style="display:none;" onchange="previewImage(this)" />
                <small class="text-muted">Profil fotoğrafı seçmek için tıklayın</small>
            </div>

            <div class="mb-3">
                <label>Ad Soyad</label>
                <input asp-for="FullName" class="form-control" placeholder="Örn: Ahmet Yılmaz" required />
            </div>

            <div class="mb-3">
                <label>Uzmanlık Alanı</label>
                <input asp-for="Specialization" class="form-control" placeholder="Örn: Fitness, Pilates, Yoga" required />
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label>Mesai Başlangıç</label>
                    <input asp-for="WorkStartTime" type="time" class="form-control" value="09:00" />
                </div>
                <div class="col-md-6 mb-3">
                    <label>Mesai Bitiş</label>
                    <input asp-for="WorkEndTime" type="time" class="form-control" value="17:00" />
                </div>
            </div>

            <button type="submit" class="btn-save">KAYDET</button>
            <a asp-action="Trainers" class="btn-cancel">Vazgeç ve Geri Dön</a>
        </form>
    </div>
</div>

<script>
    function previewImage(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById('imgPreview').src = e.target.result;
                document.getElementById('imgPreview').style.display = 'block';
                document.getElementById('placeholderText').style.display = 'none';
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>