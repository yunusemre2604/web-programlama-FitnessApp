@model IEnumerable<FitnessApp.Models.Service>
@{
    ViewData["Title"] = "Hizmetler Yönetimi";
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
    /* --- SAYFA GENELİ (Karanlık Mod) --- */
    html, body {
        height: 100%;
        background-color: #1a1a1d !important;
        margin: 0;
        padding: 0;
        color: #e0e0e0;
        font-family: 'Poppins', sans-serif;
    }

    .page-container {
        min-height: 100vh;
        padding-bottom: 50px;
    }

    /* BAŞLIK ALANI */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 40px;
        margin-bottom: 30px;
        border-bottom: 1px solid rgba(255,255,255,0.1);
        padding-bottom: 20px;
    }

    .page-title h2 {
        font-weight: 800;
        font-size: 2.2rem;
        background: linear-gradient(to right, #fff, #aaa);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin: 0;
    }

    /* TABLO KARTI */
    .table-card {
        background: #25252b;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        border: 1px solid #333;
    }

    /* TABLO TASARIMI */
    .table-dark-custom {
        width: 100%;
        margin-bottom: 0;
        color: #ccc;
        background-color: transparent;
    }

        .table-dark-custom thead th {
            background-color: #1f1f23;
            color: #fff;
            border-bottom: 2px solid #00c6ff; /* HİZMETLER İÇİN MAVİ NEON */
            padding: 20px;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.9rem;
            letter-spacing: 1px;
        }

        .table-dark-custom tbody td {
            padding: 15px 20px;
            vertical-align: middle;
            border-bottom: 1px solid rgba(255,255,255,0.05);
        }

        .table-dark-custom tbody tr:hover {
            background-color: rgba(255,255,255,0.02);
        }

    /* RESİM */
    .service-img {
        width: 60px;
        height: 60px;
        border-radius: 12px; /* Kareye yakın yuvarlak köşeler */
        object-fit: cover;
        border: 1px solid #444;
        box-shadow: 0 4px 10px rgba(0,0,0,0.3);
    }

    /* BUTONLAR */
    .btn-add-new {
        background: linear-gradient(45deg, #00c6ff, #0072ff); /* Mavi Gradient */
        color: #fff;
        border: none;
        padding: 10px 25px;
        border-radius: 30px;
        font-weight: 700;
        text-decoration: none;
        transition: 0.3s;
        box-shadow: 0 4px 15px rgba(0, 198, 255, 0.3);
    }

        .btn-add-new:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 198, 255, 0.5);
            color: #fff;
        }

    .btn-icon {
        width: 35px;
        height: 35px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: 0.3s;
        text-decoration: none;
        border: none;
        cursor: pointer;
    }

    .btn-edit {
        background: rgba(0, 198, 255, 0.1);
        color: #00c6ff;
        border: 1px solid #00c6ff;
        margin-right: 8px;
    }

        .btn-edit:hover {
            background: #00c6ff;
            color: #fff;
        }

    .btn-delete {
        background: rgba(255, 77, 77, 0.1);
        color: #ff4d4d;
        border: 1px solid #ff4d4d;
    }

        .btn-delete:hover {
            background: #ff4d4d;
            color: #fff;
        }

    .btn-back {
        background: #333;
        color: #ccc;
        padding: 10px 20px;
        border-radius: 30px;
        text-decoration: none;
        transition: 0.3s;
        display: inline-block;
        margin-top: 20px;
    }

        .btn-back:hover {
            background: #fff;
            color: #000;
        }

    .price-text {
        color: #38ef7d; /* Fiyat yeşil görünsün */
        font-weight: bold;
        font-size: 1rem;
    }

</style>

<div class="page-container">
    <div class="container">

        <div class="page-header">
            <div class="page-title">
                <h2>Hizmet Listesi</h2>
                <p class="text-muted mb-0">Spor salonu hizmetlerini yönet.</p>
            </div>
            <a asp-action="CreateService" class="btn-add-new">
                <i class="fa fa-plus me-2"></i> Yeni Hizmet Ekle
            </a>
        </div>

        <div class="table-card">
            <div class="table-responsive">
                <table class="table table-dark-custom">
                    <thead>
                        <tr>
                            <th style="width: 100px;">Resim</th>
                            <th>Hizmet Adı</th>
                            <th>Açıklama</th>
                            <th>Süre (dk)</th>
                            <th>Fiyat</th>
                            <th style="width: 150px;" class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/images/@item.ImageUrl" class="service-img" />
                                    </td>
                                    <td>
                                        <strong style="font-size: 1.05rem;">@item.ServiceName</strong>
                                    </td>
                                    <td>
                                        <span class="text-white-50">
                                            @if (item.Description != null && item.Description.Length > 50)
                                            {
                                                @item.Description.Substring(0, 50) <span>...</span>
                                            }
                                            else
                                            {
                                                @item.Description
                                            }
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@item.DurationMinutes dk</span>
                                    </td>
                                    <td>
                                        <span class="price-text">@item.Price ₺</span>
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="EditService" asp-route-id="@item.ServiceId"
                                           class="btn-icon btn-edit" title="Düzenle">
                                            <i class="fa fa-edit"></i>
                                        </a>

                                        <a href="javascript:void(0);"
                                           onclick="confirmDelete('@Url.Action("DeleteService", new { id = item.ServiceId })')"
                                           class="btn-icon btn-delete" title="Sil">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center p-5 text-muted">
                                    <i class="fa fa-dumbbell fa-3x mb-3"></i><br>
                                    Kayıtlı hizmet bulunamadı.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <a asp-action="Index" class="btn-back">
            <i class="fa fa-arrow-left me-2"></i> Panele Dön
        </a>

    </div>
</div>

<script>
    function confirmDelete(url) {
        Swal.fire({
            title: 'Emin misiniz?',
            text: "Bu hizmeti silmek istediğinize emin misiniz? Bu işlem geri alınamaz!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#ff4d4d',
            cancelButtonColor: '#333',
            confirmButtonText: 'Evet, Sil!',
            cancelButtonText: 'Vazgeç',
            background: '#25252b',
            color: '#fff',
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = url;
            }
        })
    }
</script>