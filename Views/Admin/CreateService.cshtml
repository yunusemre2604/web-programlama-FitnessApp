@model FitnessApp.Models.Service
@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<style>
    /* --- KARANLIK MOD & CAM EFEKTİ --- */
    html, body {
        height: 100%;
        background-color: #1a1a1d !important;
        color: #e0e0e0;
        font-family: 'Poppins', sans-serif;
    }

    .form-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 0;
    }

    .form-card {
        background: #25252b;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 40px;
        width: 100%;
        max-width: 600px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.5);
        position: relative;
    }

    /* MAVİ DETAYLAR (Hizmetler İçin) */
    .form-title {
        font-weight: 800;
        font-size: 2rem;
        text-align: center;
        margin-bottom: 30px;
        color: #fff;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-bottom: 2px solid #00c6ff; /* Mavi Çizgi */
        padding-bottom: 15px;
        display: inline-block;
    }

    .header-wrapper {
        text-align: center;
    }

    /* INPUT ALANLARI */
    label {
        color: #bbb;
        font-weight: 600;
        margin-bottom: 8px;
        font-size: 0.9rem;
    }

    .form-control {
        background-color: rgba(0, 0, 0, 0.3);
        border: 1px solid #444;
        color: #fff;
        border-radius: 10px;
        padding: 12px 15px;
    }

        .form-control:focus {
            background-color: rgba(0, 0, 0, 0.5);
            border-color: #00c6ff;
            box-shadow: 0 0 10px rgba(0, 198, 255, 0.3);
            color: #fff;
        }

    /* RESİM YÜKLEME ALANI */
    .img-preview-wrapper {
        width: 100%;
        height: 200px;
        border: 2px dashed #444;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
        overflow: hidden;
        background-color: rgba(0,0,0,0.2);
        position: relative;
    }

        .img-preview-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: none; /* JS ile açacağız */
        }

    .placeholder-text {
        color: #666;
        font-size: 0.9rem;
        pointer-events: none;
    }

    /* BUTONLAR */
    .btn-save {
        background: linear-gradient(45deg, #00c6ff, #0072ff);
        border: none;
        color: #fff;
        padding: 12px;
        border-radius: 30px;
        font-weight: 700;
        font-size: 1rem;
        width: 100%;
        transition: 0.3s;
        margin-top: 20px;
        box-shadow: 0 5px 15px rgba(0, 198, 255, 0.3);
    }

        .btn-save:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 198, 255, 0.5);
            color: #fff;
        }

    .btn-cancel {
        display: block;
        text-align: center;
        color: #888;
        margin-top: 15px;
        text-decoration: none;
        font-size: 0.9rem;
        transition: 0.3s;
    }

        .btn-cancel:hover {
            color: #fff;
        }

</style>

<div class="form-container">
    <div class="form-card">

        <div class="header-wrapper">
            <h2 class="form-title">Yeni Hizmet</h2>
        </div>

        <form asp-action="CreateService" method="post" enctype="multipart/form-data">

            <div class="mb-3">
                <label>Hizmet Görseli</label>
                <div class="img-preview-wrapper" onclick="document.getElementById('fileInput').click();" style="cursor: pointer;">
                    <img id="imgPreview" src="#" />
                    <span class="placeholder-text" id="placeholderText"><i class="fa fa-cloud-upload-alt fa-2x mb-2"></i><br>Resim Seçmek İçin Tıklayın</span>
                </div>
                <input type="file" name="file" id="fileInput" class="form-control" accept="image/*" style="display:none;" onchange="previewImage(this)" />
            </div>

            <div class="mb-3">
                <label>Hizmet Adı</label>
                <input asp-for="ServiceName" class="form-control" placeholder="Örn: Yoga, Pilates..." required />
            </div>

            <div class="mb-3">
                <label>Açıklama</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Hizmet detaylarını giriniz..."></textarea>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label>Süre (Dakika)</label>
                    <input asp-for="DurationMinutes" type="number" class="form-control" placeholder="60" required />
                </div>
                <div class="col-md-6 mb-3">
                    <label>Ücret (TL)</label>
                    <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                </div>
            </div>

            <button type="submit" class="btn-save">KAYDET</button>
            <a asp-action="Services" class="btn-cancel">Vazgeç ve Geri Dön</a>
        </form>
    </div>
</div>

<script>
    function previewImage(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById('imgPreview').src = e.target.result;
                document.getElementById('imgPreview').style.display = 'block';
                document.getElementById('placeholderText').style.display = 'none';
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>