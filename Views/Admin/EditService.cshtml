@model FitnessApp.Models.Service
@{
    ViewData["Title"] = "Hizmet Düzenle";
}

<style>
    body {
        background-color: #1a1a1d;
        color: #fff;
    }

    .form-card {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 30px;
        backdrop-filter: blur(10px);
    }

    .form-control {
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid #444;
        color: #fff;
    }

        .form-control:focus {
            background: rgba(0, 0, 0, 0.5);
            color: #fff;
            border-color: #38ef7d;
            box-shadow: 0 0 10px rgba(56, 239, 125, 0.3);
        }

    label {
        margin-bottom: 8px;
        color: #ccc;
        font-weight: 500;
    }

    .current-img {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 10px;
        border: 2px solid #38ef7d;
        margin-bottom: 10px;
    }
</style>

<div class="container mt-5">
    <h2 class="text-center mb-4 fw-bold" style="color: #38ef7d;">Hizmeti Düzenle</h2>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="form-card shadow-lg">
                <form asp-action="EditService" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="ServiceId" />

                    <div class="row mb-3">
                        <div class="col-md-12 text-center">
                            <label>Mevcut Resim</label><br />
                            <img src="~/images/@Model.ImageUrl" class="current-img" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label>Hizmet Adı</label>
                        <input asp-for="ServiceName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>Açıklama</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label>Süre (Dakika)</label>
                            <input asp-for="DurationMinutes" type="number" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Ücret (TL)</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" required />
                        </div>
                    </div>
                    <div class="mb-4">
                        <label>Yeni Resim Yükle (Opsiyonel)</label>
                        <input type="file" name="file" class="form-control" accept="image/*" />
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">Kaydet ve Güncelle</button>
                        <a asp-action="Services" class="btn btn-outline-secondary">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>