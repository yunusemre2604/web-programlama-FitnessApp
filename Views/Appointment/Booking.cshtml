@model FitnessApp.ViewModels.AppointmentBookingViewModel

@{
    ViewData["Title"] = "Randevu Al";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/themes/dark.css">

<style>
    /* --- SAYFA GENELİ --- */
    html {
        height: 100%;
        background: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.9)), url('https://images.unsplash.com/photo-1534438327276-14e5300c3a48?q=80&w=1470&auto=format&fit=crop');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }

    body {
        background-color: transparent !important;
        color: #fff;
        font-family: 'Poppins', sans-serif;
    }

    /* BAŞLIK ALANI */
    .booking-header {
        text-align: center;
        margin-bottom: 50px;
        margin-top: 40px;
    }

        .booking-header h1 {
            font-weight: 800;
            font-size: 3rem;
            text-transform: uppercase;
            letter-spacing: 2px;
            text-shadow: 0 5px 15px rgba(0,0,0,0.5);
        }

        .booking-header p {
            color: #aaa;
            font-size: 1.1rem;
        }

    /* ADIM BAŞLIKLARI */
    .step-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 25px;
        color: #fff;
        display: flex;
        align-items: center;
    }

    .step-number {
        background: #38ef7d;
        color: #000;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        font-size: 1.2rem;
        box-shadow: 0 0 15px rgba(56, 239, 125, 0.4);
    }

    /* KART TASARIMLARI (DARK) */
    .selection-card {
        background: rgba(40, 40, 45, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        cursor: pointer;
        position: relative;
        backdrop-filter: blur(10px);
    }

        .selection-card:hover {
            transform: translateY(-5px);
            background: rgba(50, 50, 55, 0.8);
            border-color: #38ef7d;
        }

    /* SEÇİLMİŞ KART */
    .card-selected {
        border: 2px solid #38ef7d !important;
        background: rgba(56, 239, 125, 0.1) !important;
        box-shadow: 0 0 20px rgba(56, 239, 125, 0.2);
    }

        .card-selected::after {
            content: '\f00c'; /* FontAwesome Check Icon */
            font-family: "Font Awesome 6 Free";
            font-weight: 900;
            position: absolute;
            top: 10px;
            right: 10px;
            background: #38ef7d;
            color: #000;
            width: 25px;
            height: 25px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.8rem;
        }

    /* SERVICE CARD ÖZEL */
    .service-img-container {
        height: 160px;
        position: relative;
    }

        .service-img-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0.8;
        }

    .service-price-tag {
        position: absolute;
        bottom: 10px;
        right: 10px;
        background: #38ef7d;
        color: #000;
        padding: 4px 12px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 0.9rem;
    }

    /* TRAINER CARD ÖZEL */
    .trainer-img-circle {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        border: 3px solid rgba(255,255,255,0.2);
        object-fit: cover;
        margin-top: 20px;
        transition: 0.3s;
    }

    .card-selected .trainer-img-circle {
        border-color: #38ef7d;
    }

    /* TARİH INPUTU */
    .custom-date-input {
        background: rgba(0, 0, 0, 0.3) !important;
        border: 1px solid #444 !important;
        color: #38ef7d !important;
        border-radius: 12px;
        padding: 15px;
        font-size: 1.1rem;
        text-align: center;
        cursor: pointer;
    }

        .custom-date-input:focus {
            box-shadow: 0 0 15px rgba(56, 239, 125, 0.2);
            border-color: #38ef7d !important;
        }

    /* SAAT BUTONLARI */
    .time-slot {
        background: rgba(255, 255, 255, 0.05);
        color: #ccc;
        border: 1px solid rgba(255, 255, 255, 0.1);
        width: 100px;
        margin: 5px;
        border-radius: 30px;
        transition: 0.3s;
    }

        .time-slot:hover:not(.disabled) {
            border-color: #38ef7d;
            color: #fff;
        }

    .btn-success.time-slot {
        background: #38ef7d !important;
        color: #000 !important;
        border-color: #38ef7d !important;
        font-weight: 700;
        box-shadow: 0 0 15px rgba(56, 239, 125, 0.4);
    }

    /* --- YENİ EKLENEN: PASİF VE ÇİZİK EFEKTİ --- */
    .time-slot.disabled {
        text-decoration: line-through; /* Üzerini çizer */
        text-decoration-thickness: 2px;
        text-decoration-color: #ff4d4d; /* Kırmızı çizgi */
        opacity: 0.5;
        cursor: not-allowed;
        background-color: rgba(255, 0, 0, 0.05);
        border-color: rgba(255, 255, 255, 0.05);
        color: #888;
    }

    /* Pasif Adımlar */
    .step-disabled {
        opacity: 0.3;
        pointer-events: none;
        filter: grayscale(100%);
        transition: all 0.5s ease;
    }

    /* ONAY BUTONU */
    .btn-confirm {
        background: linear-gradient(45deg, #11998e, #38ef7d);
        border: none;
        color: #fff;
        padding: 15px;
        font-size: 1.2rem;
        font-weight: 700;
        border-radius: 50px;
        width: 100%;
        transition: 0.3s;
        box-shadow: 0 5px 20px rgba(56, 239, 125, 0.3);
    }

        .btn-confirm:hover {
            transform: scale(1.02);
            box-shadow: 0 10px 30px rgba(56, 239, 125, 0.5);
            color: #fff;
        }

        .btn-confirm:disabled {
            background: #333;
            color: #555;
            box-shadow: none;
            transform: none;
        }
</style>

<div class="container pb-5">

    <div class="booking-header">
        <h1>Randevu Oluştur</h1>
        <p>Hedefine giden yolda bir sonraki adımını planla.</p>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger bg-transparent border-danger text-danger">
            <div asp-validation-summary="All"></div>
        </div>
    }

    <form asp-action="Booking" method="post" id="bookingForm">

        <input type="hidden" asp-for="ServiceId" id="hiddenServiceId" />
        <input type="hidden" asp-for="TrainerId" id="hiddenTrainerId" />
        <input type="hidden" asp-for="AppointmentTime" id="hiddenTime" />

        <div class="mb-5">
            <div class="step-title">
                <div class="step-number">1</div>
                <span>Hizmet Seçin</span>
            </div>

            <div class="row g-4 justify-content-center">
                @foreach (var service in Model.Services)
                {
                    <div class="col-md-6 col-lg-3">
                        <div class="selection-card service-card h-100"
                             onclick="selectService(this, '@service.ServiceId', '@service.ServiceName')">

                            <div class="service-img-container">
                                <img src="~/images/@service.ImageUrl" alt="@service.ServiceName">
                                <div class="service-price-tag">@service.Price ₺</div>
                            </div>

                            <div class="p-3 text-center">
                                <h5 class="fw-bold text-white mb-1">@service.ServiceName</h5>
                                <small class="text-white-50"><i class="fa fa-clock me-1"></i> @service.DurationMinutes Dakika</small>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <span asp-validation-for="ServiceId" class="text-danger d-block text-center mt-2"></span>
        </div>

        <div class="mb-5 step-disabled" id="step2">
            <div class="step-title">
                <div class="step-number">2</div>
                <span>Eğitmen Seçin</span>
            </div>

            <div class="row g-4 justify-content-center">
                @foreach (var trainer in Model.Trainers)
                {
                    <div class="col-md-3 col-6 trainer-col" data-spec="@trainer.Specialization">
                        <div class="selection-card trainer-card h-100 text-center pb-3"
                             onclick="selectTrainer(this, '@trainer.TrainerId')">

                            <img src="~/images/@trainer.ImageUrl" class="trainer-img-circle">

                            <div class="mt-3">
                                <h6 class="fw-bold text-white mb-1">@trainer.FullName</h6>
                                <span class="badge bg-dark border border-secondary text-secondary">@trainer.Specialization</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <span asp-validation-for="TrainerId" class="text-danger d-block text-center mt-2"></span>
        </div>

        <div class="mb-5 step-disabled" id="step3">
            <div class="step-title">
                <div class="step-number">3</div>
                <span>Tarih ve Saat</span>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-4 mb-4">
                    <label class="text-white-50 mb-2 ms-2 small">TARİH SEÇİNİZ</label>
                    <div class="input-group">
                        <span class="input-group-text bg-dark border-secondary text-success"><i class="fa fa-calendar-alt"></i></span>
                        <input asp-for="AppointmentDate" type="text" class="form-control custom-date-input" id="dateInput" placeholder="Tarih Seç..." readonly>
                    </div>
                    <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                </div>

                <div class="col-md-8">
                    <label class="text-white-50 mb-2 ms-2 small">MÜSAİT SEANSLAR</label>
                    <div id="slotsContainer" class="d-flex flex-wrap gap-2 p-4 rounded-3 border border-secondary bg-dark bg-opacity-50 justify-content-center" style="min-height: 100px;">
                        <div class="text-center text-muted align-self-center">
                            <i class="fa fa-arrow-left me-2"></i>Önce tarih seçiniz.
                        </div>
                    </div>
                    <span asp-validation-for="AppointmentTime" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <button type="submit" class="btn-confirm" id="submitBtn" disabled>
                    <i class="fa fa-check-circle me-2"></i> RANDEVUYU ONAYLA
                </button>
            </div>
        </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://npmcdn.com/flatpickr/dist/l10n/tr.js"></script>

    <script>
        $(document).ready(function () {
            // Flatpickr Kurulumu (Bugün ve sonrası)
            flatpickr("#dateInput", {
                locale: "tr",
                minDate: "today",
                dateFormat: "Y-m-d",
                defaultDate: "today",
                disableMobile: "true",
                onChange: function (selectedDates, dateStr, instance) {
                    fetchSlots();
                }
            });

            // Otomatik Seçim Mantığı (Diğer sayfalardan gelen yönlendirme)
            var preSelectedServiceId = $('#hiddenServiceId').val();
            var preSelectedTrainerId = $('#hiddenTrainerId').val();

            if (preSelectedServiceId > 0) {
                var serviceCard = $(`.service-card[onclick*="'${preSelectedServiceId}'"]`);
                if (serviceCard.length > 0) {
                    var onclickAttr = serviceCard.attr('onclick');
                    var serviceName = onclickAttr.split("'")[3];
                    selectService(serviceCard, preSelectedServiceId, serviceName);
                }
            }

            if (preSelectedTrainerId > 0) {
                var trainerCard = $(`.trainer-card[onclick*="'${preSelectedTrainerId}'"]`);
                if (trainerCard.length > 0) {
                    selectTrainer(trainerCard, preSelectedTrainerId);
                }
            }
        });

        function selectService(element, id, serviceName) {
            $('.service-card').removeClass('card-selected');
            $(element).addClass('card-selected');
            $('#hiddenServiceId').val(id);

            // Uzmanlık Filtreleme
            var count = 0;
            $('.trainer-col').hide();

            $('.trainer-col').each(function () {
                var trainerSpec = $(this).data('spec').toLowerCase();
                var selectedService = serviceName.toLowerCase();

                if (selectedService.includes(trainerSpec) || trainerSpec.includes(selectedService)) {
                    $(this).fadeIn(300);
                    count++;
                }
            });

            $('#step2').removeClass('step-disabled');

            if (event && event.type === 'click') {
                $('html, body').animate({ scrollTop: $("#step2").offset().top - 100 }, 500);
            }

            var currentTrainerId = $('#hiddenTrainerId').val();
            if (!currentTrainerId) {
                $('#step3').addClass('step-disabled');
                $('#submitBtn').prop('disabled', true);
            }
        }

        function selectTrainer(element, id) {
            $('.trainer-card').removeClass('card-selected');
            $(element).addClass('card-selected');
            $('#hiddenTrainerId').val(id);

            $('#step3').removeClass('step-disabled');
            $('#submitBtn').prop('disabled', true);

            // Tarih zaten bugüne ayarlı olduğu için direkt getir
            if ($('#dateInput').val()) {
                fetchSlots();
            }

            if (event && event.type === 'click') {
                $('html, body').animate({ scrollTop: $("#step3").offset().top - 100 }, 500);
            }
        }

        function fetchSlots() {
            var trainerId = $('#hiddenTrainerId').val();
            var date = $('#dateInput').val();
            var container = $('#slotsContainer');

            if (!trainerId || !date) return;

            container.html('<div class="w-100 text-center py-3"><div class="spinner-border text-success" role="status"></div><div class="mt-2 text-white-50 small">Kontrol ediliyor...</div></div>');

            $.ajax({
                url: '/Appointment/GetAvailableSlots',
                type: 'GET',
                data: { trainerId: trainerId, date: date },
                success: function (slots) {
                    container.empty();

                    if (slots.length === 0) {
                        container.html('<div class="alert alert-warning w-100 bg-transparent border-warning text-warning mb-0">Bu tarihte uygun seans yok.</div>');
                        return;
                    }

                    slots.forEach(function (slot) {
                        // Eğer müsait değilse disabled class ekle
                        var btnClass = slot.isAvailable ? '' : 'disabled';
                        var disabledAttr = slot.isAvailable ? '' : 'disabled';
                        var clickEvent = slot.isAvailable ? `onclick="selectTime(this, '${slot.time}')"` : '';

                        // Butonu oluştur
                        var btnHtml = `<button type="button" class="btn time-slot ${btnClass}" ${disabledAttr} ${clickEvent}>${slot.time}</button>`;
                        container.append(btnHtml);
                    });
                },
                error: function () {
                    container.html('<div class="text-danger">Hata oluştu.</div>');
                }
            });
        }

        function selectTime(element, time) {
            $('.time-slot').removeClass('btn-success');
            $(element).addClass('btn-success');

            $('#hiddenTime').val(time);
            $('#submitBtn').prop('disabled', false);
        }
    </script>
}