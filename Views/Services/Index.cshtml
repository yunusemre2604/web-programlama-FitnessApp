@model IEnumerable<FitnessApp.Models.Service>

@{
    ViewData["Title"] = "Hizmetlerimiz";
}

<style>
    /* --- BEYAZLIK SORUNU ÇÖZÜMÜ --- */
    html, body {
        height: 100%;
        background-color: #1a1a1d !important; /* Sayfanın kemiğini siyaha boyadık */
        margin: 0;
    }

    /* İçerik kapsayıcısı */
    .services-container {
        min-height: 100vh; /* Ekran boyu kadar uzat */
        display: flex;
        flex-direction: column;
    }

    /* Başlık Alanı */
    .page-title-area {
        text-align: center;
        padding: 80px 0 50px;
    }

        .page-title-area h1 {
            font-weight: 800;
            font-size: 3.5rem;
            background: linear-gradient(to right, #fff, #aaa);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            letter-spacing: 2px;
            text-transform: uppercase;
        }

    /* KART TASARIMI */
    .service-card-dark {
        background: #25252b;
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        border: 1px solid #333;
        position: relative;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .service-card-dark:hover {
            transform: translateY(-10px);
            box-shadow: 0 0 25px rgba(56, 239, 125, 0.3); /* Neon Yeşil Glow */
            border-color: #38ef7d;
        }

    .card-img-dark {
        height: 240px;
        width: 100%;
        object-fit: cover;
        opacity: 0.85;
        transition: 0.5s;
    }

    .service-card-dark:hover .card-img-dark {
        opacity: 1;
        transform: scale(1.1);
    }

    .card-content {
        padding: 30px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .price-pill {
        position: absolute;
        top: 20px;
        right: 20px;
        background: rgba(0, 0, 0, 0.8);
        backdrop-filter: blur(5px);
        color: #38ef7d;
        padding: 8px 18px;
        border-radius: 50px;
        font-weight: bold;
        border: 1px solid #38ef7d;
        box-shadow: 0 4px 10px rgba(0,0,0,0.5);
    }

    .btn-neon {
        margin-top: auto;
        background: transparent;
        border: 2px solid #38ef7d;
        color: #38ef7d;
        padding: 12px;
        border-radius: 30px;
        text-align: center;
        text-decoration: none;
        font-weight: 700;
        transition: 0.3s;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

        .btn-neon:hover {
            background: #38ef7d;
            color: #1a1a1d;
            box-shadow: 0 0 20px rgba(56, 239, 125, 0.6);
        }

    .description-text {
        color: #bbb;
        font-size: 0.95rem;
        line-height: 1.6;
        margin-bottom: 25px;
    }
</style>

<div class="services-container">
    <div class="container pb-5">
        <div class="page-title-area">
            <h1>Antrenman Programları</h1>
            <p class="text-secondary fs-5">Sınırlarını zorla. Hedefine uygun programı seç.</p>
        </div>

        <div class="row g-4">
            @if (Model.Any())
            {
                @foreach (var service in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="service-card-dark">
                            <div style="overflow: hidden; position: relative;">
                                <img src="~/images/@service.ImageUrl" class="card-img-dark" alt="@service.ServiceName">
                                <div class="price-pill">@service.Price ₺</div>
                            </div>

                            <div class="card-content">
                                <h3 class="fw-bold mb-2 text-white">@service.ServiceName</h3>
                                <div class="mb-3 text-warning small text-uppercase fw-bold">
                                    <i class="fa fa-clock me-1"></i> @service.DurationMinutes Dakika
                                </div>

                                <p class="description-text flex-grow-1">
                                    @service.Description
                                </p>

                                <a asp-controller="Appointment" asp-action="Booking" asp-route-serviceId="@service.ServiceId"
                                   class="btn-neon">
                                    Şimdi Başla
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center text-white-50">Hizmet bulunamadı.</div>
            }
        </div>
    </div>
</div>